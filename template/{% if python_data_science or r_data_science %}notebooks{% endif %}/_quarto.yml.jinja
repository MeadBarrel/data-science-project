project:
  type: website
  title: "{{ project_name }}"
  render:
    - md_example.qmd
    - index.qmd{% if python_data_science  %}
    - py_example.qmd{% endif %}{% if r_data_science  %}
    - r_example.qmd{% endif %}

website:
  title: "{{ project_name }}"
  navbar:
    left:
      - href: index.qmd
        text: Home
      - href: md_example.qmd
